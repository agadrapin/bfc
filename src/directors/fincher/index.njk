<script>
  // TIMELINE DOTS â€” positioned proportionally by year
  const films = {{ dir.filmography | dump | safe }};

  const START_YEAR = 1990, END_YEAR = 2025;

  function buildDots() {
    const axis = document.getElementById('timelineAxis');
    films.forEach(f => {
      const pct = ((f.year - START_YEAR) / (END_YEAR - START_YEAR)) * 100;
      const dot = document.createElement('div');
      dot.className = 'axis-dot ' + (f.pick ? 'pick' : 'regular');
      dot.style.left = pct + '%';
      dot.innerHTML = `
        <div class="axis-dot-inner"></div>
        <div class="axis-tooltip">
          <span class="tooltip-title">${f.title}</span>
          <span class="tooltip-year">${f.year}</span>
        </div>
        <div class="axis-year-label">${f.year}</div>
      `;
      axis.appendChild(dot);
    });
  }

  buildDots();

  // reveal axis line on scroll
  const axis = document.getElementById('timelineAxis');
  const axisObserver = new IntersectionObserver(entries => {
    entries.forEach(e => {
      if (e.isIntersecting) {
        axis.classList.add('revealed');
        axisObserver.unobserve(axis);
      }
    });
  }, { threshold: 0.3 });
  axisObserver.observe(axis);

  // SCROLL REVEAL
  const revealEls = document.querySelectorAll('.tl-film, .review-card');
  const io = new IntersectionObserver((entries) => {
    entries.forEach((e, i) => {
      if (e.isIntersecting) {
        const delay = (Array.from(e.target.parentNode.children).indexOf(e.target) * 0.04);
        e.target.style.opacity = '0';
        e.target.style.transform = 'translateY(12px)';
        e.target.style.transition = `opacity 0.5s ease ${delay}s, transform 0.5s ease ${delay}s`;
        requestAnimationFrame(() => { e.target.style.opacity = ''; e.target.style.transform = ''; });
        io.unobserve(e.target);
      }
    });
  }, { threshold: 0.05 });
  revealEls.forEach(el => io.observe(el));
</script>
