<!-- ═══ DIRECTOR SELECTOR ════════════════════════════════ -->
<section class="section-selector" id="selector">
  <div>
    <div class="section-tag">
      <div class="section-tag-line"></div>
      <span class="section-tag-text">The Mechanic</span>
    </div>
    <h2 class="section-heading">WHO'S<br>NEXT?</h2>
    <p class="section-body">
      Each season the wheel turns. A director is chosen — from the canon, the overlooked, the essential. Three films are selected. The club watches. The conversation begins.
    </p>
    <p class="section-body">
      The selector doesn't play favourites.
    </p>
  </div>

  <div class="terminal">
    <div class="terminal-bar">
      <div class="t-dot"></div>
      <div class="t-dot"></div>
      <div class="t-dot"></div>
      <span class="terminal-title">director_selector.exe</span>
    </div>
    <div class="terminal-body">
      <div class="terminal-prompt"><span>$</span> ./select --from pantheon.json</div>
      <div class="slot-window">
