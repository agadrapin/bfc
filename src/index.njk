<script>
  // ── RAIN STREAKS
  const rainEl = document.getElementById('rain');
  for (let i = 0; i < 18; i++) {
    const line = document.createElement('div');
    line.className = 'rain-line';
    const h = 40 + Math.random() * 80;
    line.style.cssText = `
      left: ${Math.random() * 100}%;
      height: ${h}px;
      opacity: ${0.06 + Math.random() * 0.1};
      animation-duration: ${2.5 + Math.random() * 4}s;
      animation-delay: ${Math.random() * 4}s;
    `;
    rainEl.appendChild(line);
  }

  // ── DIRECTOR SELECTOR
  const directors = [
    { name: 'F.F. COPPOLA',    years: '1969 – 1997' },
    { name: 'INGMAR BERGMAN',  years: '1946 – 2003' },
    { name: 'S. KUBRICK',      years: '1953 – 1999' },
    { name: 'A. KUROSAWA',     years: '1943 – 1993' },
    { name: 'DAVID LYNCH',     years: '1977 – 2006' },
    { name: 'A. TARKOVSKY',    years: '1962 – 1986' },
    { name: 'M. SCORSESE',     years: '1967 – Present' },
    { name: 'M. HANEKE',       years: '1989 – Present' },
    { name: 'WONG KAR-WAI',    years: '1988 – Present' },
    { name: 'P. ALMODOVAR',    years: '1980 – Present' },
    { name: 'J. CASSAVETES',   years: '1959 – 1984' },
    { name: 'T. MALICK',       years: '1973 – Present' },
    { name: 'R.W. FASSBINDER', years: '1969 – 1982' },
    { name: 'J-L. GODARD',     years: '1960 – 2022' },
    { name: 'C. NOLAN',        years: '1998 – Present' },
    { name: 'A. HITCHCOCK',    years: '1925 – 1976' },
  ];

  let spinning = false;

  function runSelector() {
    if (spinning) return;
    spinning = true;

    const result = document.getElementById('slotResult');
    const sub = document.getElementById('slotSub');
    const btn = document.getElementById('spinBtn');

    btn.textContent = '▶ Selecting...';
    result.classList.add('spinning');
    sub.textContent = '— searching database —';

    let frame = 0;
    const total = 28;
    const interval = setInterval(() => {
      const d = directors[Math.floor(Math.random() * directors.length)];
      result.textContent = d.name;
      sub.textContent = d.years;
      frame++;

      if (frame >= total) {
        clearInterval(interval);
        result.classList.remove('spinning');
        const chosen = directors[Math.floor(Math.random() * directors.length)];
        result.textContent = chosen.name;
        sub.textContent = chosen.years + ' · selected';
        btn.textContent = '▶ Run Again';
        spinning = false;
      }
    }, 90);
  }

  // ── SCROLL REVEAL
  const cards = document.querySelectorAll('.dir-card, .film-card');
  const io = new IntersectionObserver((entries) => {
    entries.forEach((e, i) => {
      if (e.isIntersecting) {
        e.target.style.opacity = '0';
        e.target.style.transform = 'translateY(16px)';
        e.target.style.transition = `opacity 0.5s ease ${i * 0.04}s, transform 0.5s ease ${i * 0.04}s`;
        requestAnimationFrame(() => {
          e.target.style.opacity = '';
          e.target.style.transform = '';
        });
        io.unobserve(e.target);
      }
    });
  }, { threshold: 0.1 });

  cards.forEach(c => io.observe(c));
</script>
