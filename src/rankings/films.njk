<!-- ═══ TIEBREAK NOTE ══════════════════════════════════── -->
<div class="tiebreak-note">
  Ties are broken by Retrospect score first, then Enjoyment.
</div>

<script>
  // ── SCROLL REVEAL FOR LEADERBOARD ROWS
  (function() {
    const rows = document.querySelectorAll('.leaderboard-row');
    if (!rows.length) return;

    const io = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const row = entry.target;
          const siblings = Array.from(row.parentNode.querySelectorAll('.leaderboard-row'));
          const idx = siblings.indexOf(row);
          row.style.transitionDelay = (idx * 0.12) + 's';
          row.classList.add('revealed');

          const bar = row.querySelector('.score-bar-fill');
          if (bar) {
            setTimeout(() => {
              bar.style.width = bar.dataset.width + '%';
            }, 200 + idx * 120);
          }

          io.unobserve(row);
        }
      });
    }, { threshold: 0.1 });

    rows.forEach(row => io.observe(row));
  })();

  // ── FILTER
  (function() {
    const btns = document.querySelectorAll('.filter-btn');
    const rows = document.querySelectorAll('.leaderboard-row');

    function applyFilter(filter) {
      let rank = 1;
      rows.forEach(row => {
        const dir = row.dataset.director;
        if (filter === 'all' || dir === filter) {
          row.style.display = '';
          row.querySelector('.rank-num').textContent = rank;
          rank++;
        } else {
          row.style.display = 'none';
        }
      });
    }

    btns.forEach(btn => {
      btn.addEventListener('click', () => {
        btns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        applyFilter(btn.dataset.filter);
      });
    });
  })();
</script>
